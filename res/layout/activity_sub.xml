<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="com.sss.carolina.kyrsovaya.Test.TheTest.SubActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="28dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:text="Правильно ли, что"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            tools:layout_editor_absoluteX="204dp"
            tools:layout_editor_absoluteY="68dp"/>

        <TextView
            android:id="@+id/questionsTV1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="24dp"
            android:textColor="@android:color/white"
            android:textSize="30sp" />

        <Button
            android:id="@+id/buttonTrue1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/trueAnswer"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/nextButton1"
            android:layout_toStartOf="@+id/nextButton1" />

        <Button
            android:id="@+id/buttonFalse1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/falseAnswer"
            android:layout_alignBaseline="@+id/buttonTrue1"
            android:layout_alignBottom="@+id/buttonTrue1"
            android:layout_toRightOf="@+id/nextButton1"
            android:layout_toEndOf="@+id/nextButton1" />

        <ImageButton
            android:id="@+id/nextButton1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@android:drawable/ic_media_ff"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Введите ваш ответ"
            android:textColor="@android:color/white"
            android:visibility="invisible"
            android:layout_alignTop="@+id/trueEditText1"
            android:layout_alignRight="@+id/buttonTrue1"
            android:layout_alignEnd="@+id/buttonTrue1" />

        <EditText
            android:id="@+id/trueEditText1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number"
            android:visibility="invisible"
            android:layout_marginTop="23dp"
            android:layout_below="@+id/buttonFalse1"
            android:layout_toRightOf="@+id/questionsTV1"
            android:layout_toEndOf="@+id/questionsTV1"
            android:layout_marginLeft="30dp"
            android:layout_marginStart="30dp" />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
