<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="com.sss.carolina.kyrsovaya.Test.TheTest.SubThreeNumbActivity">

    <RelativeLayout
        android:layout_width="576dp"
        android:layout_height="343dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="28dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:text="Правильно ли, что"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            tools:layout_editor_absoluteX="204dp"
            tools:layout_editor_absoluteY="68dp"/>

        <TextView
            android:id="@+id/questionsTV4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView4"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="22dp"
            android:textColor="@android:color/white"
            android:textSize="30sp" />

        <Button
            android:id="@+id/buttonTrue5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/trueAnswer"
            android:layout_alignBaseline="@+id/buttonFalse5"
            android:layout_alignBottom="@+id/buttonFalse5"
            android:layout_toLeftOf="@+id/nextButton5"
            android:layout_toStartOf="@+id/nextButton5"  />

        <Button
            android:id="@+id/buttonFalse5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/falseAnswer"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/nextButton5"
            android:layout_toEndOf="@+id/nextButton5"/>

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="27dp"
            android:text="Введите ваш ответ"
            android:textColor="@android:color/white"
            android:visibility="invisible"
            android:layout_alignBaseline="@+id/trueEditText5"
            android:layout_alignBottom="@+id/trueEditText5"
            android:layout_toLeftOf="@+id/nextButton5"
            android:layout_toStartOf="@+id/nextButton5"  />

        <EditText
            android:id="@+id/trueEditText5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number"
            android:visibility="invisible"
            android:layout_below="@+id/buttonFalse5"
            android:layout_alignLeft="@+id/buttonFalse5"
            android:layout_alignStart="@+id/buttonFalse5" />

        <ImageButton
            android:id="@+id/nextButton5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@android:drawable/ic_media_ff"
            android:layout_below="@+id/trueEditText5"
            android:layout_centerHorizontal="true"  />

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
